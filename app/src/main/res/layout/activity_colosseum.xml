<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Colosseum">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Colosseum:"
            android:textColor="#000000"
            android:fontFamily="@font/alike_angular"
            android:textSize="25sp"
            android:textStyle="bold"
            android:layout_margin="10dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/colosseum1"
            android:fontFamily="@font/asul"
            android:textColor="#000000"
            android:textSize="20sp"
            android:layout_margin="10dp"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="300dp"
            android:background="@drawable/colosseum1"
            android:layout_margin="10dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/colosseum2"
            android:fontFamily="@font/asul"
            android:textColor="#000000"
            android:textSize="20sp"
            android:layout_margin="10dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="History:"
            android:textColor="#000000"
            android:fontFamily="@font/alike_angular"
            android:textSize="25sp"
            android:textStyle="bold"
            android:layout_margin="10dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/colosseum3"
            android:fontFamily="@font/asul"
            android:textColor="#000000"
            android:textSize="20sp"
            android:layout_margin="10dp"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="300dp"
            android:background="@drawable/colosseum2"
            android:layout_margin="10dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/colosseum4"
            android:fontFamily="@font/asul"
            android:textColor="#000000"
            android:textSize="20sp"
            android:layout_margin="10dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Medival:"
            android:textColor="#000000"
            android:fontFamily="@font/alike_angular"
            android:textSize="25sp"
            android:textStyle="bold"
            android:layout_margin="10dp"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="300dp"
            android:background="@drawable/colosseum3"
            android:layout_margin="10dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/colosseum5"
            android:fontFamily="@font/asul"
            android:textColor="#000000"
            android:textSize="20sp"
            android:layout_margin="10dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Modern:"
            android:textColor="#000000"
            android:fontFamily="@font/alike_angular"
            android:textSize="25sp"
            android:textStyle="bold"
            android:layout_margin="10dp"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="300dp"
            android:background="@drawable/colosseum4"
            android:layout_margin="10dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:text="@string/colosseum6"
            android:fontFamily="@font/asul"
            android:textSize="20sp"
            android:layout_margin="10dp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="For More Information:-"
            android:textColor="#000000"
            android:fontFamily="@font/alike_angular"
            android:textSize="25sp"
            android:textStyle="bold"
            android:layout_margin="10dp"
            android:textAlignment="center"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/colosseumlink1"
            android:text="@string/colosseum8"
            android:fontFamily="@font/asul"
            android:textSize="20sp"
            android:textAlignment="center"
            android:layout_margin="10dp"
            android:textColor="@android:color/holo_blue_dark"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/colosseumlink2"
            android:text="@string/colosseum9"
            android:fontFamily="@font/asul"
            android:textSize="20sp"
            android:textAlignment="center"
            android:layout_margin="10dp"
            android:textColor="@android:color/holo_blue_dark"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn1"
            android:text="Go To Location"
            android:onClick="Loc1"
            android:textStyle="bold"
            android:fontFamily="@font/alike_angular"
            android:textSize="15sp"
            android:layout_gravity="center"
            android:layout_margin="15dp"
            android:textColor="@android:color/holo_green_light"
            android:drawableRight="@drawable/ic_baseline_add_location_24"
            />


    </LinearLayout>

    </ScrollView>

</RelativeLayout>